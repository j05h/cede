exec >/target/root/postinstall.log
exec 2>&1

mkdir -p /target/root/.ssh && chmod 0700 /target/root/.ssh
wget -O /target/root/.ssh/authorized_keys http://build-host/authorized_keys && chmod 0600 /target/root/.ssh/authorize
sed -i "s/ListenAddress 0.0.0.0/&\nListenAddress $(hostname -i)/" /target/etc/ssh/sshd_config
